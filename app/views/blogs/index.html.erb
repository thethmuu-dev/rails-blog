<h1>Blog list</h1>
<p style="color: green;"><%= notice %></p>
<table class="table">
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th colspan=3>&#9899;</th>
  </tr>
  <% @blogs.each do |blog| %>
  <tr>
    <td>
      <%= blog.title %>
    </td>
    <td>
      <%= blog.content %>
    </td>
    <td>
      <%= link_to raw("&#10145;"), blog_path(blog.id) %>
    </td>
    <td>
      <%= link_to  raw("&#9935;"), edit_blog_path(blog.id) %>
    </td>
    <td>
      <%= link_to  raw("&#9746;"), blog_path(blog.id), method: :delete, data: { confirm: 'Are you sure to delete?' } %>
    </td>
  </tr>
  <% end %>
</table><br><br>

<p class="shadow"><%= link_to  "Go to Blog Create Page", new_blog_path %></p>